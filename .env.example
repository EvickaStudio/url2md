# ── Server ──────────────────────────────────────
PORT=3000
WORKERS=1
MAX_CONCURRENCY=4
MAX_TIMEOUT_MS=30000
TRUST_PROXY=loopback

# ── Auth (comma-separated; leave empty to disable) ──
API_KEYS=

# ── SearXNG ─────────────────────────────────────
# Generate with: openssl rand -hex 32
SEARXNG_SECRET_KEY=
SEARXNG_URL=http://searxng:8080
SEARXNG_TIMEOUT_MS=10000

# ── Cache ────────────────────────────────────────
CACHE_MAX_ITEMS=500
CACHE_TTL_MS=3600000

# ── Stealth / Proxies ───────────────────────────
# Comma-separated proxy URLs (http://user:pass@host:port)
PROXY_LIST=
# Max requests before browser restarts (memory hygiene)
BROWSER_MAX_REQUESTS=200

# ── Metrics ──────────────────────────────────────
ENABLE_METRICS=0
